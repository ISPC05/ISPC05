import sqlite3

class Normativa:
    def __init__(self, id_normativa, tipo_normativa, nro_normativa, fecha, nombre, descripcion, categoria, jurisdiccion, organo_legislativo, palabras_clave):
        self.id_normativa = id_normativa
        self.tipo_normativa = tipo_normativa
        self.nro_normativa = nro_normativa
        self.fecha = fecha
        self.nombre = nombre
        self.descripcion = descripcion
        self.categoria = categoria
        self.jurisdiccion = jurisdiccion
        self.organo_legislativo = organo_legislativo
        self.palabras_clave = palabras_clave

    def display_normativa_details(self):
        print("ID: ", self.id_normativa)
        print("Tipo de Normativa: ", self.tipo_normativa)
        print("Número de Normativa: ", self.nro_normativa)
        print("Fecha: ", self.fecha)
        print("Nombre: ", self.nombre)
        print("Descripción: ", self.descripcion)
        print("Categoría: ", self.categoria)
        print("Jurisdicción: ", self.jurisdiccion)
        print("Órgano Legislativo: ", self.organo_legislativo)
        print("Palabras Clave: ", self.palabras_clave)
        print("-" * 110)


class NormativaManager:
    def __init__(self, db_file):
        self.db_file = db_file
        self.connection = None

    def open_connection(self):
        # Abre la conexión con la base de datos SQLite
        self.connection = sqlite3.connect(self.db_file)

    def close_connection(self):
        # Cierra la conexión con la base de datos SQLite
        if self.connection:
            self.connection.close()
